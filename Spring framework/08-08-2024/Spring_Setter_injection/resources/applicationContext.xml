<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans.xsd">  
  
    <bean id="a1" class="com.example.Address">
        <constructor-arg value="Navsari Road, Amravati"/>
    </bean>
    
    <bean id="s1" class="com.example.Student">  
        <property name="name" value="Yash" />
        <property name="marks" value="90" />
        <property name ="address" ref="a1"/>
    </bean>
  
</beans>
