<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans.xsd">  
  
    <bean id="a1" class="com.demo.Address">
        <constructor-arg value="Navsari Road, Amravati"/>
    </bean>
    
    <bean id="s2" class="com.demo.Student">  
        <constructor-arg value="Anshul" type="java.lang.String"/>  
        <constructor-arg value="80" type="int"/>  
        <constructor-arg ref="a1"/>  
    </bean>
  
</beans>
